/**index.wxss**/
.headimage {
  height: 250rpx;
  width: 100%;
  text-align: center;
  margin-top: 0;
}
.image {
  width: 100%;
  height: 100%;
}
.info {
  height: 150rpx;
  background-color: rgb(254, 254, 254);
  display: flex;
  line-height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
 
}
.address {
  margin-left: 50rpx;

}
.opentime {
  margin-right: 30rpx;
}
.choosetime {
  width: 660rpx;
  height: 300rpx;
  margin: 0 50rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 5rpx 40rpx 5rpx rgba(232, 232, 232);

}
.content {
  background-color:rgb(255, 255, 255);
  /* overflow: auto; */
}

.top_nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 70rpx;
  background-color: whitesmoke;
  border-radius: 20rpx;
}
.nav-name{
  display: inline-block;
  color: #2b2e33;
  line-height: 70rpx;
  margin:0 100rpx;
  font-size: 30rpx;
}
.nav-hover{
  color:rgb(255, 128, 90);
  font-size: 40rpx;
}
.now-use {
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}
.scroll-view {
  height: 380rpx;
}
.reserve-seat{
  width: 600rpx;
  height: 140rpx;
  margin: 30rpx;
}
.selfchoosetime{
  line-height: 70rpx;
  font-size: 35rpx;
  text-align: center;
  height: 70rpx;
  background-color:rgb(250, 249, 245);
  border-radius: 10rpx;
  margin: 30rpx 40rpx;
  text-align: left;
}
.settime{
  width: 110rpx;
  height: 100rpx;
  border: 1px solid ;
  border-radius: 100rpx;
  text-align: center;
  font-size: 35rpx;
  line-height: 100rpx;
  margin-left: 18rpx;
  color:#666;
}
.next{
  margin: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.tofirst{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-right: 20rpx;
  box-shadow: 0rpx 5rpx 40rpx 5rpx rgba(232, 232, 232);
  text-align: center;
  position: fixed;
  bottom: 60rpx;
  right: 50rpx;

}
.shouye {
  font-size: 30rpx;
  
}